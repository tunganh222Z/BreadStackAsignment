<?xml version="1.0" encoding="UTF-8" ?>
<suite parallel = "false" name="BreadStack_Assignment">

    <listeners>
        <listener class-name="userInterface.actions.reportConfig.AllureTestListener"/>
    </listeners>

    <test name="Run on Firefox" preserve-order="true">
        <parameter name="browserName" value="firefox"/>
        <parameter name="url" value="http://localhost:8080/"/>
        <classes>
            <class name="com.ui.testcases.FormAuthentication"/>
            <class name="com.ui.testcases.Checkboxes"/>
            <class name="com.ui.testcases.Dropdown"/>
            <class name="com.ui.testcases.FileUploads"/>
        </classes>
    </test>

    <test name="Run on Chrome" preserve-order="true">
        <parameter name="browserName" value="chrome"/>
        <parameter name="url" value="http://localhost:8080/"/>
        <classes>
            <class name="com.ui.testcases.FormAuthentication"/>
            <class name="com.ui.testcases.Checkboxes"/>
            <class name="com.ui.testcases.Dropdown"/>
            <class name="com.ui.testcases.FileUploads"/>
        </classes>
    </test>

    <test name="Run on Edge" preserve-order="true">
        <parameter name="browserName" value="edge"/>
        <parameter name="url" value="http://localhost:8080/"/>
        <classes>
            <class name="com.ui.testcases.FormAuthentication"/>
            <class name="com.ui.testcases.Checkboxes"/>
            <class name="com.ui.testcases.Dropdown"/>
            <class name="com.ui.testcases.FileUploads"/>
        </classes>
    </test>

    <test name="Run EcommerceAPI" preserve-order="true">
        <classes>
            <class name="com.api.testcases.EcommerceAPI"/>
        </classes>
    </test>

</suite>